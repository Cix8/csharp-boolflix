@using csharp_boolflix.Builders
@{
    ViewData["Title"] = "Classificazioni Età";
    Layout = "_EditorLayout";
}

@model ClassificationsBuilder

@if (Model.Classifications.Count > 0)
{
    <h2 class="text-center">Lista Classificazioni: </h2>
    <ul class="list-group w-50 mx-auto my-3">
        @foreach (Classification classification in Model.Classifications)
        {
            <li class="list-group-item">
                <span>Classificazione età </span>
                <span>@classification.Age+</span>
            </li>
        }
    </ul>
}
else
{
    <h2 class="text-center">La lista classificazioni è vuota... </h2>
}

<div>
    <h3 class="text-center">Aggiungi classificazione</h3>
</div>
<form asp-controller="Editor" asp-action="CreateClassification" method="post">
    @Html.AntiForgeryToken()
    <div class="form-check mb-3">
        <label for="age" class="form-label">Età classificazione:</label>
        <input type="number" class="form-control" id="age" placeholder="Inserisci l'età della classificazione età'" asp-for="NewClassification.Age">
        <span asp-validation-for="NewClassification.Age" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <button type="submit" class="btn btn-primary">Invia</button>
    </div>
</form>